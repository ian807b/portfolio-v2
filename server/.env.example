# Server Configuration
NODE_ENV=development
PORT=4000

# Database
# Local dev: file:./dev.db
# Production: postgresql://user:password@host:5432/database
DATABASE_URL=file:./dev.db

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:3000

# Security
IP_HASH_SALT=change-this-to-random-string

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # General API limit
MCP_RATE_LIMIT_MAX=5  # AI chat limit per 15min

# Anthropic API (Optional - for AI-powered chat)
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-api-key-here
